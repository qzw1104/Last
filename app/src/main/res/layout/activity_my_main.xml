<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/mainbgp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3CA19F9B"></CalendarView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="278dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/addSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F49B5A"
                    android:text="添加日程"
                    android:textColor="#475E5C"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/scheduleDetailInput"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:hint="请输入具体日程"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/checkAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认添加"
                        android:background="@drawable/querenbtn"
                        android:textColor="#475E5C"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/schedule1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:textSize="24dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/schedule2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:textSize="24dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/schedule3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:textSize="24dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/schedule4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:textSize="24dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/schedule5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:textSize="24dp"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E4E4E3E1"
            android:gravity="bottom">

            <Button
                android:id="@+id/mymain1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的日程"
                android:background="#BFDCDBDA"
                android:textColor="#05655C"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/friendslist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的好友"
                android:background="#BFDCDBDA"
                android:textColor="#05655C"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/myself1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的主页"
                android:background="#BFDCDBDA"
                android:textColor="#05655C"
                android:textSize="16sp"/>
        </LinearLayout>
        </LinearLayout>>

    </LinearLayout>


</LinearLayout>