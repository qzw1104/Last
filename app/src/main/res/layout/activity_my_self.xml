<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/mainbgp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0.05"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F7BE81"
            android:gravity="center"
            android:text="个人主页"
            android:textColor="#676464"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_showIcon"
                android:layout_width="100dp"
                android:layout_height="105dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="28dp"
                app:srcCompat="@drawable/cc"
                tools:src="@tools:sample/avatars"
                tools:srcCompat="@tools:sample/avatars"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="昵称："
                android:layout_weight="0.35"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/myname"
                android:layout_width="180dp"
                android:layout_weight="0.15"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:inputType="text"
                android:textSize="25sp"
                android:gravity="left|center"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="手机号码："
            android:layout_weight="0.15"
            android:textSize="20sp"
            android:gravity="left|center"
            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="住址："
            android:layout_weight="0.15"
            android:textSize="20sp"
            android:gravity="left|center"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="个性签名："
            android:layout_weight="0.15"
            android:textSize="20sp"
            android:gravity="left|center"/>

        <TextView
            android:id="@+id/qm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="bottom">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="#E4E4E3E1">

        <Button
            android:id="@+id/mymain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的日程"
            android:background="#BFDCDBDA"
            android:textColor="#05655C"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/friendslist2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的好友"
            android:background="#BFDCDBDA"
            android:textColor="#05655C"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/myself2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的主页"
            android:background="#BFDCDBDA"
            android:textColor="#05655C"
            android:textSize="16sp"/>

    </LinearLayout>
        </LinearLayout>>
</LinearLayout>

</LinearLayout>