<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--没点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->
            <solid android:color="#F49B5A" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="#ABDACD" /><!--按钮边框-->
            <corners
                android:topLeftRadius="25dip"
                android:topRightRadius="25dip"
                android:bottomLeftRadius="25dip"
                android:bottomRightRadius="25dp"/>
        </shape>
    </item>
    <item android:state_pressed="true"><!--点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->
            <solid android:color="#F7BE81" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="#ABDACD" /><!--按钮边框-->
            <corners
                android:topLeftRadius="25dip"
                android:topRightRadius="25dip"
                android:bottomLeftRadius="25dip"
                android:bottomRightRadius="25dp"/>
        </shape>
    </item>
</selector>